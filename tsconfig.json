{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "rootDir": "./src",
    "lib": ["ES2018", "DOM"],
    "target": "ES2018",
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": false
  },
  "exclude": ["node_modules/", "dist/"]
}
